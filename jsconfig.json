{
  "compileOnSave": false,
  "exclude": ["dist/", "node_modules/"],
  "include": ["src/**/*", "public/**/*"],
  "compilerOptions": {
    "checkJs": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@js/*": ["src/js/*"],
      "@styles/*": ["src/styles/*"],
      "@glsl/*": ["src/glsl/*"],
      "@assets/*": ["src/assets/*"]
    }
  }
}
